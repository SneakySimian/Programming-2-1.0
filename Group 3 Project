package CostofTuition;

import java.util.Scanner;

public class CostofTuition 
{
    
	// This reads the keyboard when the program runs.
    public static final Scanner kybd = new Scanner(System.in);

    public static void main (String [ ] args)
    {
     
        // This is what the user should see when the program starts up. 
       // It is supposed to give a description of what the program is about.
    	System.out.println("Hello Campbell Student,");
        System.out.println("\nUse this program to calculate your cost of tuition based on the number of courses, \n");
        System.out.println("and the number of credit hours that you are taking.");
         
     
        // Ask the student to enter his or her name, when prompted. 
        String name = getStudentName();
         
       
        // Ask the student to enter the number of courses he or she is taking.
        // "int" describes the data type.
        // The variable here is "numCourses", representing the number of courses a student is taking. 
        
        int numberOfCourses = getCourseNumber();
         
        // This variable calculates the cost of tuition. 
        double tuitionCost = calculateTuition(numberOfCourses);
        
        // print tuition
        printTuition(name, numberOfCourses, tuitionCost);
         
    }
   

		// This variable is to print the cost of tuition.
        // After the user has entered responses from the prompts given, the program should output the student's name,
        // and the number of courses he or she is taking. 
        // Based on this, the program should output to the user the cost of tuition based on number of courses and number of credit hours a student is taking.
         
     

	// This is how a the program is to retrieve the student name,
    // by the student inputting his or her name. 
    public static String getStudentName()
    {
        //This system.out.print should ask the student for his or her name. 
        System.out.println("\nTo start, what is your name?: ");
        String name = kybd.nextLine();
        //This should output the name a student enters.
        return name;
       
    }
        

	// method to ask how many courses and return a cumulative sum 
    // based on course credits entered
    public static int getCourseNumber()
    {
      System.out.println("How many courses are you taking?");
        int numberOfCourses = Integer.parseInt(kybd.nextLine());
         
        int sumCredits = 0;
         
        for(int i=1;i<=numberOfCourses;i++)
        {
            System.out.printf("How many credits are you taking for course %d: ",i);
            sumCredits += Integer.parseInt(kybd.nextLine());
        }
       
      return sumCredits; // return sum of credits
    }
     
    // This calculates the cost of tuition.
    public static double calculateTuition(int sumCredits)
    {
      double tuition = 0;
       
      // Students taking less than 12 credit hours, pay $715.00 per credit hour. 
      if(sumCredits < 12) 
          tuition = 715.00 * sumCredits;
      
   // Students taking more than 12 credit hours and less than 18 credit hours, pay a flat rate of $715.00 per credit hour.
      else if(sumCredits >= 12 && sumCredits <= 18) 
          tuition = 715.00;
      
      
        // Students taking more than 18 credit hours pay $715.00 and then, $715.00, for each additional credit hour.
        else if(sumCredits > 18)
            tuition =  715.00 + (sumCredits-18) * 715.00;
         
         
         // Students taking less than 12 credit hours for an online course pay $450.00 per credit hour.
         else if(sumCredits < 12) 
          tuition = 450.00 *sumCredits;
             
       
      return tuition;
    }
     
    // method to print out tuition
    public static void printTuition(String name, int numCredits, double tuitionCost)
    {
       
            System.out.printf("\nTuition calculation for %s\n",name);
            System.out.printf("Credits Taken = %d\n",numCredits);
            System.out.printf("Tuition Cost = $%.2f\n",tuitionCost);
       
    }

}
